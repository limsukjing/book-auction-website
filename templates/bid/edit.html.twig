{% extends 'base.html.twig' %}

{% block title %}EBTB - Edit Bid #{{ bid.id }}{% endblock %}

{% block body %}
    <div class="content">
        <h3><span>EDIT BID #{{ bid.id }} - {{ bid.auctionItem.title|upper }}</span></h3>

        <div class="bid-crud">
            <a href="{{ path('bid_index') }}" class="btn-left"><<< Discard changes</a>

            {{ include('bid/_show.html.twig') }}

            {% for flash_message in app.session.flashBag.get('error') %}
                <br>
                <div class="flash-error alert alert-danger alert-dismissible fade show" role="alert">
                    {{ flash_message }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}

            <div class="partial-template">
                {{ include('bid/_form.html.twig', {'button_label': 'Update'}) }}
                {{ include('bid/_delete_form.html.twig') }}
            </div>
            <!--partial template-->
        </div>
        <!--bid crud-->
    </div>
    <!--bid content-->
{% endblock %}





