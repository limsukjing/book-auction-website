{% extends 'base.html.twig' %}

{% block title %}EBTB - {{ book.title }}{% endblock %}

{% block books %}navbar-active{% endblock %}

{% block body %}
    <div class="content">
        <h3><span>BOOK #{{ book.id }} - {{ book.title|upper }}</span></h3>

        <div class="book-crud">
            <a href="{{ path('book_index') }}" class="btn-right"><<< Back to list</a>

            <table class="table table-hover table-bordered">
                <tbody>
                    <tr>
                        <th>#</th>
                        <td>{{ book.id }}</td>
                    </tr>
                    <tr>
                        <th>Image</th>
                        <td><img src="/images/{{ book.image }}" class="book-img-show img-fluid" alt="{{ book.image }}"></td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ book.title }}</td>
                    </tr>
                    <tr>
                        <th>Author</th>
                        <td>{{ book.author }}</td>
                    </tr>
                    <tr>
                        <th>Genre</th>
                        <td>{{ book.genre }}</td>
                    </tr>
                    <tr>
                        <th>ISBN</th>
                        <td>{{ book.ISBN }}</td>
                    </tr>
                    <tr>
                        <th>Reserve Price</th>
                        <td>&#8364;{{ book.reservePrice|number_format(2, '.', ',') }}</td>
                    </tr>
                    <tr>
                        <th>Summary</th>
                        <td class="text-justify">{{ book.summary }}</td>
                    </tr>
                    <tr>
                        <th>Action</th>
                        <td><a href="{{ path('book_edit', {'id': book.id}) }}">Edit / Delete</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <!--book crud-->
    </div>
    <!--book content-->
{% endblock %}
