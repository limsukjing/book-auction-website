{% extends 'base.html.twig' %}

{% block title %}EBTB - Edit @{{ user.username }}{% endblock %}

{% block users %}navbar-active{% endblock %}

{% block body %}
    <div class="content">
        <h3><span>EDIT USER #{{ user.id }} - {{ user.username|upper }}</span></h3>

        {% for flash_message in app.session.flashBag.get('error') %}
            <br>
            <div class="flash-error" style="background-color: #FFA500; color: #FFFFFF; margin: 5px; padding: 18px; text-align: center;">
                {{ flash_message }}
            </div>
        {% endfor %}

        <div class="user-crud">
            <a href="{{ path('user_show', {'id': user.id}) }}" class="btn-left"><<< Discard changes</a>

            <div class="partial-template">
                {{ include('user/_form.html.twig', {'button_label': 'Update'}) }}
                {{ include('user/_delete_form.html.twig') }}
            </div>
            <!--partial template-->
        </div>
        <!--user crud-->
    </div>
    <!--user content-->
{% endblock %}

