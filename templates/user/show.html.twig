{% extends 'base.html.twig' %}

{% block title %}EBTB - @{{ user.username }}{% endblock %}

{% block users %}navbar-active{% endblock %}

{% block body %}
    <div class="content">
        <h3><span>USER #{{ user.id }} - {{ user.username|upper }}</span></h3>

        <div class="user-crud">
            <a href="{{ path('user_index') }}" class="btn-right"><<< Back to list</a>

            <table class="table table-hover table-bordered">
                <tbody>
                <tr>
                    <th>#</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Username</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>{{ user.password }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Action</th>
                    <td><a href="{{ path('user_edit', {'id': user.id}) }}">Edit / Delete</a></td>
                </tr>
                </tbody>
            </table>
        </div>
        <!--user crud-->
    </div>
    <!--user content-->
{% endblock %}

